        <div id="index-menu">
            <img src="poietic-generator.net.gif" /><br />
            <form action="/page/draw" method="post" id="credentials" data-ajax="false">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="anonymous" />
            </form>
            <a href="/page/draw" data-ajax="false" data-role="button" data-inline="true" id="link_play">Play</a>
	    <!-- <a href="/page/view" data-ajax="false" data-role="button" data-inline="true" id="link_view">View</a> -->
        </div>
        <div class="spacer"></div>
    </div>
    <div id="footer">
        <p>Copyleft - 2011 - Gnuside</p>
        <p>
        <a href="http://poietic-generator.net/">Original concept</a> by Olivier Auber
        </p>
    </div>
</div>

<%= erb :common_footer %>
