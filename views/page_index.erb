<%=
    @page.css << "/css/base.css"
    @page.css << "/css/page_index.css"

    @page.js << "/js/jquery.cookie.js"
    @page.js << "/js/page_index.js"

	erb :common_header
%>

<div id="page" data-role="page">
    <div id="header">
        <h1>Poietic Generator <em>Reloaded</em></h1>
    </div>
    <div id="content" data-role="content">
        <div id="index-menu">
            <img src="poietic-generator.net.gif" /><br />
            <form action="" method="post" id="credentials">
                <label for="username">Username</label>
                <input type="text" id="username" name="username" value="anonymous" />
		<script>
		    var user_name = $.cookie('user_name');
		    if (user_name) {
			el = document.getElementById('username');
			el.value = user_name;
		    }
		</script>
            </form>
            <a href="/page/draw" data-ajax="false" data-role="button" data-inline="true" id="link_play">Play</a><!-- or
            <a href="/page/view" data-ajax="false">View</a>-->
        </div>
        <div class="spacer"></div>
    </div>
    <div id="footer">
        <p>Copyleft - 2011 - Gnuside</p>
        <p>
        <a href="http://poietic-generator.net/">Original concept</a> by Olivier Auber
        </p>
    </div>
</div>

<%= erb :common_footer %>
