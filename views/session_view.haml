%div(data-fullscreen="true" data-role="page" class="ui-page ui-page-theme-b poietic-page-#{@page.title}")
  %div(data-id="head" data-position="fixed" data-role="header" data-fullscreen="true")
    %h1.username Poietic Generator's view
    %a.ui-btn-left.logout(data-ajax="false" href="/") Back
  #canvas-container{"data-role" => "content"}
    .ui-grid-a.viewer
      %canvas#session-viewer
    %div#session-overlay
      .message
        .label Session finished
        %a.ui-btn#view_start(href="#") History
  .slider{"data-role" => "fieldcontain"}
    %input{"data-role" => "none", "type" => "range", "name" => "history_slider", "id" => "history_slider", "data-highlight" => "true"}/

