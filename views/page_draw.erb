<!-- la zone chat -->
<div id="session-chat" data-role="page">
    <div data-role="header" data-id="head" data-backbtn="false" data-position="fixed">
        <h1 class="username"></h1>
        <a href="/page/logout" data-ajax="false" class="ui-btn-right">Logout</a>
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup">Drawing Zone</a></li>
                <li><a href="#session-global" data-transition="slideup">Global view</a></li>
                <li><a href="#session-chat" data-transition="slideup" class="ui-btn-active ui-state-persist">Messages</a></li>
            </ul>
        </div>
    </div>
    <div data-role="content">
        <fieldset class="ui-grid-a">
            <form id="send-message-form" action="" method="post" data-ajax="false">
                <div class="ui-block-a">
                    <select id="send-message-form-to" name="send-message-form-to" data-native-menu="false"></select>
                </div> <!-- ui-block-a -->
                <div class="ui-block-b">
                    <input id="send-message-form-content" name="send-message-form-content" cols="20" rows="5" type="text" />
                </div> <!-- ui-block-b -->
            </form>
        </fieldset> <!-- grid -->
        <hr />
        <div class="ui-grid-a" id="message-contener"></div>
    </div>
</div>

