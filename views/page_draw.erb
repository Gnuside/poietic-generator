<%=
    #@page.css << "/css/page_session.css"
    @page.css << "/css/colorjack.css"

    @page.js << "/js/jquery.cookie.js"
    @page.js << "/js/colorjack.js"
    @page.js << "/js/session.js"
    @page.js << "/js/patch.js"
    @page.js << "/js/board.js"
    @page.js << "/js/zone.js"
    @page.js << "/js/console.js"
    @page.js << "/js/drawing.js"
    @page.js << "/js/brushzone.js"
    @page.js << "/js/chat.js"
    @page.js << "/js/page_draw.js"

    erb :common_header
%>


<!-- la zone de dessin -->
<div id="session-zone" data-role="page">
    <div data-role="header" data-id="head" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup" class="ui-btn-active ui-state-persist">Drawing zone</a></li>
                <li><a href="#session-global" data-transition="slideup">Global view</a></li>
                <li><a href="#session-chat" data-transition="slideup">Messages</a></li>
            </ul>
        </div>
    </div>
    <div data-role="content">
        <canvas id="session-drawing"></canvas>
    </div>
    <div data-role="footer" data-position="fixed" class="ui-grid-d">
        <div class="ui-block-a">
            <a href="#" data-role="button" data-theme="c" id="brush"><span id="brush-action">Show</span> colors</a>
        </div>
        <div class="ui-block-b"></div>
        <div class="ui-block-c"></div>
        <div class="ui-block-d"></div>
        <div class="ui-block-e">
            <ul data-role="listview" data-inset="true">
                <li><a href="#session-chat">New messages<span class="ui-li-count">O</span></a></li>
            </ul>
        </div>
    </div>
</div>
<!-- la vue globale -->
<div id="session-global" data-role="page">
    <div data-role="header" data-id="head" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup">Drawing zone</a></li>
                <li><a href="#session-global" data-transition="slideup" class="ui-btn-active ui-state-persist">Global view</a></li>
                <li><a href="#session-chat" data-transition="slideup">Messages</a></li>
            </ul>
        </div>
    </div>
    <div data-role="content">
        <canvas id="session-board"></canvas>
    </div>
</div>
<!-- la zone chat -->
<div id="session-chat" data-role="page">
    <div data-role="header" data-id="head" data-position="fixed">
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup">Drawing Zone</a></li>
                <li><a href="#session-global" data-transition="slideup">Global view</a></li>
                <li><a href="#session-chat" data-transition="slideup" class="ui-btn-active ui-state-persist">Messages</a></li>
            </ul>
        </div>
    </div>
    <div data-role="content">
        <a href="#send-message" data-rel="dialog" data-transition="pop">Send a message</a>
    </div>
</div>
<!-- send a message -->
<div id="send-message" data-role="page">
    <div data-role="header">
        <h1>Send a message</h1>
    </div>
    <div data-role="content">
        <form id="send-message-form" action="" method="post" data-ajax="false">
            <div data-role="fieldcontain">
                <label for="send-message-form-to-user">User</label>
                <input type="text" id="send-message-form-to-user" name="send-message-form-to-user" disabled="disabled" value="FakeUser">
            </div>
            <input type="hidden" id="send-message-form-to" name="send-message-form-to" value="">
            <div data-role="fieldcontain">
                <label for="send-message-form-content">Message</label>
                <textarea id="send-message-form-content" name="send-message-form-content" cols="20" rows="5"></textarea>
            </div>
            <div class="ui-grid-a">
                <div class="ui-block-a">
                    <a href="#" data-role="button" data-rel="back">Cancel</a>
                </div>
                <div class="ui-block-b">
                    <input type="submit" value="Send">
                </div>
            </div>
        </form>
    </div>
</div>

<%= erb :common_footer %>
