<%=
    @page.css << "/css/page_draw.css"
    @page.css << "/css/colorjack.css"
    @page.css << "/css/message.css"

    @page.js << "/js/jquery.cookie.js"
    @page.js << "/js/colorjack.js"
    @page.js << "/js/colorpicker.js"
    @page.js << "/js/draw_session.js"
    @page.js << "/js/patch.js"
    @page.js << "/js/board.js"
    @page.js << "/js/zone.js"
    @page.js << "/js/console.js"
    @page.js << "/js/editor.js"
    @page.js << "/js/viewer.js"
    @page.js << "/js/brushzone.js"
    @page.js << "/js/chat.js"
    @page.js << "/js/page_draw.js"

    erb :common_header
%>


<!-- drawing zone -->
<div id="session-zone" data-role="page">
    <div data-role="header" data-id="head" data-position="fixed">
        <a href="#" id="brush"><span id="current_color">&nbsp;&nbsp;&nbsp;&nbsp;</span>Color</a>
        <h1 class="username"></h1>
        <a href="/page/logout" data-ajax="false" class="ui-btn-right logout">Logout</a>
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup" class="ui-btn-active ui-state-persist">Drawing zone</a></li>
                <li><a href="#session-chat" data-transition="slideup">Messages<span class="ui-li-count ui-btn-up-c ui-btn-corner-all">0</span></a></li>
            </ul>
        </div>
    </div>
    <div data-role="content" id="canvas-container">
        <div class="ui-grid-a viewer">
            <canvas id="session-viewer"></canvas>
        </div>
        <div class="ui-grid-a editor">
            <canvas id="session-editor"></canvas>
        </div>
    </div>
</div>
<!-- chat zone -->
<div id="session-chat" data-role="page">
    <div data-role="header" data-id="head" data-position="fixed">
        <h1 class="username"></h1>
        <a href="/page/logout" data-ajax="false" class="ui-btn-right logout">Logout</a>
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup">Drawing zone</a></li>
                <li><a href="#session-chat" data-transition="slideup" class="ui-btn-active ui-state-persist">Messages</a></li>
            </ul>
        </div>
    </div>
    <div data-role="content">
        <fieldset>
            <form id="send-message-form" action="" method="post" data-ajax="false">
                <div data-role="fieldcontain">
                    <label for="send-message-form-to">User</label>
                    <select id="send-message-form-to" name="send-message-form-to"></select>
                </div>
                <div data-role="fieldcontain">
                    <label for="send-message-form-content">Message</label>
                    <input id="send-message-form-content" name="send-message-form-content" type="text" value="" />
                </div>
            </form>
        </fieldset>
        <hr />
        <div class="ui-grid-a" id="message-contener"></div>
    </div>
</div>

<%= erb :common_footer %>
