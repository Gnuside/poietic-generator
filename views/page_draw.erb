<!-- la vue globale -->
<div id="session-global" data-role="page">
    <div data-role="header" data-id="head" data-backbtn="false" data-position="fixed">
        <h1 class="username"></h1>
        <a href="/page/logout" data-ajax="false" class="ui-btn-right">Logout</a>
        <div data-role="navbar">
            <ul>
                <li><a href="#session-zone" data-transition="slideup">Drawing zone</a></li>
                <li><a href="#session-global" data-transition="slideup" class="ui-btn-active ui-state-persist">Global view</a></li>
